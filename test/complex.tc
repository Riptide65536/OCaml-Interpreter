/* 计算斐波那契数列的函数 */
int fibonacci(int n) {
  if (n <= 1) {
    return n;
  }
  return fibonacci(n - 1) + fibonacci(n - 2);
}

/* 计算阶乘的函数 */
int factorial(int n) {
  int result = 1;
  int i = 1;
  
  while (i <= n) {
    result = result * i;
    i = i + 1;
  }
  
  return result;
}

/* 判断是否为素数的函数 */
int isPrime(int n) {
  if (n <= 1) {
    return 0;  /* 0表示false */
  }
  
  if (n <= 3) {
    return 1;  /* 1表示true */
  }
  
  if (n % 2 == 0 || n % 3 == 0) {
    return 0;
  }
  
  int i = 5;
  while (i * i <= n) {
    if (n % i == 0 || n % (i + 2) == 0) {
      return 0;
    }
    i = i + 6;
  }
  
  return 1;
}

/* 主函数 */
int main() {
  int choice = 2;
  int result = 0;
  
  if (choice == 1) {
    /* 计算斐波那契数列第8项 */
    result = fibonacci(8);
  } else if (choice == 2) {
    /* 计算5的阶乘 */
    result = factorial(5);
  } else {
    /* 判断17是否为素数 */
    result = isPrime(17);
  }
  
  return result;
} 
